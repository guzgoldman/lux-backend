<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="x-ua-compatible" content="ie=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Plan de Estudios</title>
    <style>
      @page { size: A4 portrait; margin: 15mm; } 
      * { box-sizing: border-box; } 
      body {
        font-family: Arial, sans-serif; 
        font-size: 10pt; 
        color: #111; 
      }
      h1 { 
        text-align: center; 
        margin: 5px 0 15px; 
        font-size: 13pt;
        font-weight: bold;
      }
      .anio-section {
        margin-bottom: 15px;
      }
      .anio-header {
        background-color: #023559;
        padding: 6px;
        text-align: center;
        font-weight: bold;
        font-size: 11pt;
        margin-bottom: 5px;
        color: white;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 5px;
        font-size: 9pt;
      }
      table th {
        background-color: #f5f5f5;
        border: 1px solid #000;
        padding: 6px 8px;
        text-align: center;
        font-weight: bold;
      }
      table td {
        border: 1px solid #000;
        padding: 6px 8px;
        text-align: left;
      }
      table td.centro {
        text-align: center;
      }
      .total-row {
        background-color: #f0f0f0;
        font-weight: bold;
      }
    </style>
  </head>
  <body>
    <h1>{{carrera}}<br/>Resolución Nº {{resolucionPlan}}</h1>

    {{#each anios}}
      <div class="anio-section">
        <div class="anio-header">{{this.titulo}}</div>
        
        <table>
          <thead>
            <tr>
              <th style="width: 60px;">Nº</th>
              <th>MATERIA</th>
              <th style="width: 100px;">HORAS</th>
            </tr>
          </thead>
          <tbody>
            {{#each this.materias}}
              <tr>
                <td class="centro">{{this.numero}}</td>
                <td>{{this.nombre}}</td>
                <td class="centro">{{this.horas}}</td>
              </tr>
            {{/each}}
            <tr class="total-row">
              <td colspan="2">TOTAL</td>
              <td class="centro">{{this.totalHoras}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    {{/each}}

  </body>
</html>
